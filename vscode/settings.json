{
    // the most important, apparently
    "workbench.colorTheme": "Aura Dark (Soft Text)",
    "editor.fontSize": 20,
    // "editor.fontFamily": "Go Mono",
    // "editor.fontFamily": "Consolas",
    // "editor.fontFamily": "Cascadia Code",
    // "editor.fontFamily": "Hack",
    "editor.fontFamily": "Jetbrains Mono",
    // "editor.fontFamily": "Source Code Pro",
    "terminal.integrated.fontSize": 20,
    // "terminal.integrated.fontFamily": "Go Mono",
    // "terminal.integrated.fontFamily": "Consolas",
    // "terminal.integrated.fontFamily": "Cascadia Code",
    // "terminal.integrated.fontFamily": "Hack",
    "terminal.integrated.fontFamily": "Jetbrains Mono",
    // "terminal.integrated.fontFamily": "Source Code Pro",
    "terminal.integrated.scrollback": 250,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.windowsEnableConpty": true,
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "path": [
                "C:/Program Files/PowerShell/7-preview/pwsh.exe"
            ],
            "args": [
                "-nologo"
            ],
            "icon": "terminal-powershell"
        }
    },
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": false, // this must always be off
    "editor.codeLens": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.folding": false,
    "editor.fontLigatures": true,
    "editor.fontWeight": "normal",
    "editor.formatOnSave": true,
    "editor.glyphMargin": false, // this is the gutter
    "editor.guides.indentation": true,
    "editor.hover.delay": 250,
    "editor.hover.sticky": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.lightbulb.enabled": false,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "alt",
    "editor.multiCursorPaste": "spread",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "line",
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [
        80,
        120
    ],
    "editor.scrollBeyondLastLine": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.showFoldingControls": "mouseover",
    "editor.snippetSuggestions": "inline",
    "editor.suggestSelection": "first",
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.showIcons": false,
    "workbench.editor.showTabs": true,
    "workbench.editor.splitSizing": "split",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.untitled.labelFormat": "name",
    "workbench.editor.labelFormat": "long", // short
    "workbench.editor.untitled.hint": "hidden",
    "workbench.iconTheme": null,
    "workbench.panel.defaultLocation": "bottom",
    "workbench.settings.editor": "json",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.settings.useSplitJSON": false,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.statusBar.visible": false,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.tabs.enabled": false,
    "debug.allowBreakpointsEverywhere": true,
    "diffEditor.renderSideBySide": false,
    "errorLens.enabledDiagnosticLevels": [],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // speed up indexing
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/target/**": true
    },
    "git.autofetch": true,
    "redhat.telemetry.enabled": false,
    "remove-empty-lines.allowedNumberOfEmptyLines": 1,
    "rewrap.autoWrap.enabled": false,
    "scm.defaultViewMode": "tree",
    "scm.diffDecorations": "gutter",
    "scm.diffDecorationsGutterVisibility": "hover",
    "screencastMode.fontSize": 24,
    "screencastMode.verticalOffset": 0,
    "security.workspace.trust.untrustedFiles": "open",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.highlights.useColourScheme": true,
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "update.mode": "manual",
    "window.titleBarStyle": "custom",
    "workbench.layoutControl.enabled": false,
    "window.menuBarVisibility": "compact",
    "window.zoomLevel": -1,
    "files.exclude": {
        "**/.idea": true,
        "**/.vscode": true,
        "**/**.DotSettings.user": true,
        "**/bin": true,
        "**/obj": true
    }
}
